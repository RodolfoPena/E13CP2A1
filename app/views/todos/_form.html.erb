<div class="row justify-content-md-center">
  <div class="col-md-4">
    <div class="jumbotron">
      <%= form_with model: @todo, local: true do |f| %>
      <%= f.label :description, "Tarea" %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.label :completed, "Completada?" %>
      <%= f.check_box :completed, class: 'form-control' %>
      <br>
      <%= f.submit "Crear", class: 'form-control btn btn-lg btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
