<center>
<br>
<h1>Tarea</h1>
<br>
<div class="jumbotron">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h4><%= @todo.description %></h4>
          <% if @todo.completed == true %>
          <p><%= 'Completada' %></p>
          <% else %>
          <p><%= 'No completada' %></p>
          <% end %>
          <p><%= @todo.created_at %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Volver', todos_path, class: 'btn btn-lg btn-success' %>
</center>
